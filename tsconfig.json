{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "jsx": "preserve"
  },
  "include": [
    "src",
    "playground/.vitepress/*.ts",
    "playground/.vitepress/theme"
  ],
  "exclude": ["node_modules"]
}
